<div id="projects">
  <table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Date Created</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
      <tr>
          <td><%= project.project_name %></td>
          <td><%= project.project_description %></td>
          <td><%= project.date_created %></td>         
          <td><%= link_to "Show", project, class:"text-decoration-none" %></td>
          <td><%= link_to "Edit", edit_project_path(project), class:"text-decoration-none" %></td>
          <td><%= button_to "Destroy", project, method: :delete, class:"btn btn-danger btn-sm p-0" %></td>
      </tr> 
      <% end %>
  </tbody>
</table>
<%= link_to 'New Project', new_project_path, class:"btn btn-secondary" %>
  
</div>



